<FormLabel@Label>
    size_hint_x: None
    width: 100
    text_size: self.size
    halign: 'left'
    valign: 'top'
    padding_y: 7

<TextInputLineRow@BoxLayout>
    orientation: 'horizontal'
    size_hint_y: None
    height: 40
    padding: dp(10), dp(10), 0, 0

<TextInputMultiLineRow@BoxLayout>
    orientation: 'horizontal'
    size_hint_y: None
    height: 120
    padding: dp(10), dp(10), 0, 0

<ListItemButton>:
    selected_color: .88, .88, .88, 1
    deselected_color : .6, .6, .6, 1

<LoadDialog>:
    drives_list: drives_list
    filechooser: filechooser

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"

            ListView:
                id: drives_list
                size_hint: .2, 1
                adapter:
                    la.ListAdapter(data=root.get_quick_links(), selection_mode='single', allow_empty_selection=False, cls=lv.ListItemButton)

            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: dp(8)
                    TextInput:
                        id: text_box_path
                        multiline: False
                        size_hint_x: 0.6
                        hint_text: 'new value'
                        padding: dp(10), dp(10), 0, 0
                        on_text_validate: root.go_to_directory(text_box_path.text)
                    Button:
                        size_hint:0.2,1
                        text: 'Go'
                        on_release: root.go_to_directory(text_box_path.text)

                StackLayout:
                    size_hint_y: None
                    orientation: 'lr-tb'
                    height: 40

                    ToggleButton:
                        size_hint: .2, 1
                        text: 'List'
                        state: 'down'
                        group: 'filechooser'
                        on_release: filechooser.view_mode = 'list'

                    ToggleButton:
                        size_hint: .2, 1
                        text: 'Icon'
                        group: 'filechooser'
                        on_release: filechooser.view_mode = 'icon'

                FileChooser:
                    id: filechooser
                    filter_dirs: True
                    filters: [root.show_item]
                    on_entries_cleared:text_box_path.text = filechooser.path

                    FileChooserListLayout
                    FileChooserIconLayout

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Select File"
                on_release: root.load(filechooser.path, filechooser.selection)


<MessagePopup@Popup>:
    size_hint: 0.6, 0.3

<WarningPopup>:
    id: warning_popup
    size_hint: 0.3, 0.5

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            id: warning_popup_text
            size_hint_y: 1
            text: "A warning"

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()


