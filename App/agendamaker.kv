<Manager>:
    id: screen_manager

    main_screen: main_screen

    MainScreen:
        id: main_screen
        name: 'main_screen'
        manager: screen_manager

<Popup>:
    title: "Select File"
    size_hint: 0.9, 0.9

<Row@BoxLayout>:
    canvas.before:
        Color:
            rgba: .5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    value: ''
    Label:
        text: root.value

<MainScreen>:
#    canvas:
#        Rectangle:
#            source: "../test.png"
#            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        Accordion:
            size_hint_x: None
            width: 300
            orientation: 'vertical'
            AccordionItem:
                collapse:True
                title: 'Calendars'
                GridLayout:
                    cols:2
                    row_force_default: True
                    row_default_height: 30
                    Label:
                        text_size: self.size
                        halign: 'left'
                        text: "Activiteiten"
                    TextInput:
                        id: internal_activities
                        hint_text:"Google Calendar ID"
                    Label:
                        text_size: self.size
                        halign: 'left'
                        text: "Activiteiten Extern"
                    TextInput:
                        id: external_activities
                        hint_text:"Google Calendar ID"
                    Label:
                        text_size: self.size
                        halign: 'left'
                        text: "Verjaardagen"
                    TextInput:
                        id: external_activities
                        hint_text:"Google Calendar ID"

            AccordionItem:
                collapse:False
                title: 'Activiteiten'
                BoxLayout:
                    orientation: 'vertical'
                    TextInputLineRow:
                        FormLabel:
                            size_hint_x: None
                            width: 100
                            text_size: self.size
                            halign: 'left'
                            text: "Titel"
                        TextInput:
                            id: activity_title
                    TextInputMultiLineRow:
                        FormLabel:
                            size_hint_x: None
                            width: 100
                            text_size: self.size
                            halign: 'left'
                            valign: 'top'
                            text: "Beschrijving"
                        TextInput:
                            id: activity_description
                            height: 100
                    TextInputLineRow:
                        FormLabel:
                            text_size: self.size
                            halign: 'left'
                            text: "Prijs"
                        TextInput:
                            id: activity_price
                            text: ''
                    TextInputLineRow:
                        FormLabel:
                            text_size: self.size
                            halign: 'left'
                            text: "Locatie"
                        TextInput:
                            id: activity_location
                            text: 'USC Studio 2'
                    TextInputLineRow:
                        FormLabel:
                            text_size: self.size
                            halign: 'left'
                            text: "Begin datum"
                        TextInput:
                            id: activity_start_date
                            hint_text:"YYYY-MM-DD"
                    TextInputLineRow:
                        FormLabel:
                            text_size: self.size
                            halign: 'left'
                            text: "Begin tijd"
                        TextInput:
                            id: activity_start_time
                            hint_text:"HH:MM"
                    TextInputLineRow:
                        FormLabel:
                            text_size: self.size
                            halign: 'left'
                            text: "Eind datum"
                        TextInput:
                            id: activity_end_date
                            hint_text:"YYYY-MM-DD"
                    TextInputLineRow:
                        FormLabel:
                            text_size: self.size
                            halign: 'left'
                            text: "Eind tijd"
                        TextInput:
                            id: activity_end_time
                            hint_text:"HH:MM"
                    Widget:
            AccordionItem:
                collapse:True
                title: 'Verjaardagen'

        Widget:
            id:agenda_image
            canvas.after:
                Rectangle:
                    pos: 310,50
                    source: "../test.gif"
                    size: 877, 620

