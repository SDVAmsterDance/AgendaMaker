#:kivy 1.1.0
#:import lv kivy.uix.listview
#:import la kivy.adapters.listadapter
#:import da kivy.adapters.dictadapter


<Manager>:
    id: screen_manager

    main_screen: main_screen

    MainScreen:
        id: main_screen
        name: 'main_screen'
        manager: screen_manager

<Popup>:
    title: "Select File"
    size_hint: 0.9, 0.9

<Row@BoxLayout>:
    canvas.before:
        Color:
            rgba: .5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    value: ''
    Label:
        text: root.value

<MainScreen>:
    __safe_id: [connection_dropdown.__self__]

    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 300

            Accordion:
                orientation: 'vertical'
                AccordionItem:
                    collapse:False
                    title: 'Activiteiten Intern'
                    id: accordion_internal_activities

                    BoxLayout:
                        padding: 10
                        orientation:'vertical'
                        GridLayout:
                            id:checkbox_grid_internal_activities
                            cols: 2
                        Label:
                            text_size: self.size
                            halign: 'left'
                            text: "Activiteiten Intern"
                            size_hint_y: None
                            height: 40
                        CalendarId:
                            id: internal_activities
                            multiline:True
                            hint_text:"Google Calendar ID"
                            on_focus: root.check_focus(self, 'internal')

                AccordionItem:
                    collapse:True
                    title: 'Activiteiten Extern'
                    id: accordion_external_activities
                    BoxLayout:
                        padding: 10
                        orientation:'vertical'
                        GridLayout:
                            id:checkbox_grid_external_activities
                            cols: 2
                        Label:
                            text_size: self.size
                            halign: 'left'
                            text: "Activiteiten Extern"
                            size_hint_y: None
                            height: 40
                        CalendarId:
                            id: external_activities
                            hint_text:"Google Calendar ID"
                            on_focus: root.check_focus(self, 'external')

                AccordionItem:
                    collapse:True
                    title: 'Agenda vertalen'
                    id: accordion_translation_calendar

                    BoxLayout:
                        padding: 10
                        orientation:'vertical'
                        Label:
                            text_size: self.size
                            halign: 'left'
                            text: "Engels"
                            size_hint_y: None
                            height: 40
                        Switch:
                            halign: 'left'
                            size_hint_y: None
                            height: 40
                            id: language_switch
                        Button:
                            text: "Vertaal maand"
                            on_press: root.translate_agenda()
                            size_hint_y: None
                            height: 40
                        Label:
                            text_size: self.size
                            halign: 'left'
                            text: "Vertaalde agenda intern"
                            size_hint_y: None
                            height: 40
                        TextInput:
                            id: translation_calendar_intern
                            multiline:False
                            size_hint_y: None
                            height: 40
                            hint_text:"Google Calendar ID"
                            disabled: True
                        Label:
                            text_size: self.size
                            halign: 'left'
                            text: "Vertaalde agenda extern"
                            size_hint_y: None
                            height: 40
                        TextInput:
                            id: translation_calendar_extern
                            multiline:False
                            size_hint_y: None
                            height: 40
                            hint_text:"Google Calendar ID"
                            disabled: True


                AccordionItem:
                    collapse:True
                    title: 'verjaardagen'
                    id: accordion_birthdays
                    BoxLayout:
                        padding: 10
                        orientation:'vertical'
                        Label:
                            text_size: self.size
                            halign: 'left'
                            text: "Verjaardagen"
                        TextInput:
                            id: birthdays

                            size_hint_y: None
                            height: 40
                            padding: dp(10), dp(10), 0, 0

                            multiline: False
                            hint_text:"Spreadsheet ID"
                            on_focus: root.check_focus(self, 'birthdays')

        BoxLayout:
            orientation: 'vertical'
            TabbedPanel:
                id: tabs
                do_default_tab: False
                TabbedPanelItem:
                    text: 'Maand'
                    id: accordion_month_image
                    Image:
                        id:agenda_image
                        size: 877, 620

                TabbedPanelItem:
                    text: 'Flyer'
                    id: accordion_month_flyer
                    Image:
                        id:flyer_image
                        size: 595, 842
                TabbedPanelItem:
                    text: 'Verjaardagen'
                    id: accordion_birthdays
                    BoxLayout:
                        TextInput:
                            id: birthdays_template
                            multiline: True
                            size_hint_x: 1
                            hint_text: 'template'
                            padding: dp(10), dp(10), 0, 0
                        TextInput:
                            id: birthdays_mail
                            multiline: True
                            size_hint_x: 1
                            hint_text: 'email'
                            padding: dp(10), dp(10), 0, 0
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(44)
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        text: "Vorige maand"
                        on_press: root.previous_month()

                    Label:
                        id: current_month
                        text: "huidige maand"

                    Button:
                        text: "Volgende maand"
                        on_press: root.next_month()

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: None
                    width: dp(250)
                    id: bubble_buttons

                    Button:
                        text: 'Make Calendar'
                        on_release: root.make_calendar()

                    Button:
                        id: connection_btn
                        text: 'Connection'
                        on_release: connection_dropdown.open(self)
    DropDown:
        id: connection_dropdown
        on_select: connection_btn.text = '{}'.format(args[1])

        Button:
            text: 'Logout'
            size_hint_y: None
            height: '48dp'
            on_release: root.logout()

        Button:
            text: 'Update calendars'
            size_hint_y: None
            height: '48dp'
            on_release: root.update_calendars()

        Button:
            text: 'Export e-mail'
            size_hint_y: None
            height: '48dp'
            on_release: root.export_email()

        Button:
            text: 'Export website'
            size_hint_y: None
            height: '48dp'
#            on_release: root.update_calendars()

        Button:
            text: 'Export Facebook'
            size_hint_y: None
            height: '48dp'
#            on_release: root.update_calendars()

        Button:
            text: 'Export print'
            size_hint_y: None
            height: '48dp'
#            on_release: root.update_calendars()



<FormLabel@Label>
    size_hint_x: None
    width: 100
    text_size: self.size
    halign: 'left'
    valign: 'top'
    padding_y: 7

<TextInputLineRow@BoxLayout>
    orientation: 'horizontal'
    size_hint_y: None
    height: 40
    padding: dp(10), dp(10), 0, 0

<TextInputMultiLineRow@BoxLayout>
    orientation: 'horizontal'
    size_hint_y: None
    height: 120
    padding: dp(10), dp(10), 0, 0

<ListItemButton>:
    selected_color: .88, .88, .88, 1
    deselected_color : .6, .6, .6, 1

<LoadDialog>:
    drives_list: drives_list
    filechooser: filechooser

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"

            ListView:
                id: drives_list
                size_hint: .2, 1
                adapter:
                    la.ListAdapter(data=root.get_quick_links(), selection_mode='single', allow_empty_selection=False, cls=lv.ListItemButton)

            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: dp(8)
                    TextInput:
                        id: text_box_path
                        multiline: False
                        size_hint_x: 0.6
                        hint_text: 'new value'
                        padding: dp(10), dp(10), 0, 0
                        on_text_validate: root.go_to_directory(text_box_path.text)
                    Button:
                        size_hint:0.2,1
                        text: 'Go'
                        on_release: root.go_to_directory(text_box_path.text)

                StackLayout:
                    size_hint_y: None
                    orientation: 'lr-tb'
                    height: 40

                    ToggleButton:
                        size_hint: .2, 1
                        text: 'List'
                        state: 'down'
                        group: 'filechooser'
                        on_release: filechooser.view_mode = 'list'

                    ToggleButton:
                        size_hint: .2, 1
                        text: 'Icon'
                        group: 'filechooser'
                        on_release: filechooser.view_mode = 'icon'

                FileChooser:
                    id: filechooser
                    filter_dirs: True
                    filters: [root.show_item]
                    on_entries_cleared:text_box_path.text = filechooser.path

                    FileChooserListLayout
                    FileChooserIconLayout

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Select File"
                on_release: root.load(filechooser.path, filechooser.selection)


<CalendarDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"


        GridLayout:
            id:checkbox_grid
            cols: 2

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Select Calendars"
                on_release: root.load(checkbox_grid)


<MessagePopup@Popup>:
    size_hint: 0.6, 0.3

<WarningPopup>:
    id: warning_popup
    size_hint: 0.3, 0.5

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            id: warning_popup_text
            size_hint_y: 1
            text: "A warning"

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

<CalendarId@TextInput>:
    multiline:True
    size_hint_y: None
    height: 120


<CalendarCheckBox@Checkbox>:
    value:""
    size_hint_x: None
    width: 40

<CalendarCheckBoxLabel@Label>:
    halign: 'left'

<CustomDropDown>:
    Button:
        text: 'My first Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
    Label:
        text: 'Unselectable item'
        size_hint_y: None
        height: 44
    Button:
        text: 'My second Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')